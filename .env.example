# Comma-separated list of worker URLs to distribute load across
WORKER_URLS=https://example-worker-1.com:8080,https://example-worker-2.com:8081,https://example-worker-3.com:8082

# Allow insecure TLS connections (not recommended for production)
ALLOW_INSECURE_TLS=true

# Comma-separated list of Twitter search queries to monitor
TWITTER_QUERIES="ai,trump,crypto,puppies,robots,technology"

# Maximum number of results to return per query
MAX_RESULTS=10

# How often to run the queries in seconds (0 for one-time execution)
CADENCE=15